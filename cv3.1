import tkinter as tk

stl = int(input("Pocet stlpcov: "))
riad = int(input("Pocet riadkov: "))

x = 10
y = 10
d = 30
color1, color2 = "maroon", "gold"

canvas = tk.Canvas(height=2 * y + riad * (d + 3), width=2 * x + stl * (d + 3))
canvas.pack()

for i in range(riad):
    for j in range(stl):
        canvas.create_rectangle(x, y, x+d, y+d, fill=color1)
        x = x + d + 3
        color1, color2 = color2, color1
    color1, color2 = color2, color1
    x = x - stl * (d + 3)
    y = y + d +3


canvas.mainloop()
