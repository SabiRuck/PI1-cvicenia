import tkinter as tk, random as rand

canvas = tk.Canvas(height=500, width=500)
canvas.pack()


def main():
    x, y = 10, 150
    while x < 330:
        v = rand.randint(20, 50)
        dom(x, y, v, rand.randint(v // 2, v))
        x += v

def dom(x, y, vel1, vel2):
    canvas.create_polygon(x, y - vel1, x + vel1//2, y - vel1 - vel2, x + vel1, y - vel1, fill=color(), outline="black")
    canvas.create_rectangle(x, y - vel1, x + vel1, y, fill=color())

def color():
    r = rand.randint(0, 255)
    g = rand.randint(0, 255)
    b = rand.randint(0, 255)
    return f"#{r :02x}{g :02x}{b :02x}"


main()
canvas.mainloop()
